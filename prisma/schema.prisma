// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Conseiller {
  id        Int    @id @default(autoincrement())
  nom       String @db.Char(15)
  prenom    String @db.Char(15)
  email     String @unique
  telephone String @unique @db.Char(15)
}

model Admin {
  id       Int    @id @default(autoincrement())
  nom      String @db.Char(15)
  prenom   String @db.Char(15)
  email    String @unique
  password String
}

model Eleve {
  id        Int    @id @default(autoincrement())
  nom       String @db.Char(15)
  prenom    String @db.Char(15)
  email     String @unique
  telephone String @unique @db.Char(15)
  age       Int
  password  String
}

model Info_domaine {
  id          Int    @id @default(autoincrement())
  nom         String @db.Char(20)
  description String
  debouche    String
}

model Info_metier {
  id          Int    @id @default(autoincrement())
  nom         String @db.Char(20)
  description String
}

model Info_ecole {
  id          Int    @id @default(autoincrement())
  nom         String @db.Char(15)
  adresse     String @db.Char(15)
  description String
  filiere     String
}

model Questionnaire {
  id                Int    @id @default(autoincrement())
  serie_bac         String @db.Char(10)
  mention           String @db.Char(10)
  nom_mat_meilleur  String @db.Char(15)
  note_mat_meilleur Int
  nom_mat_mauvaise  String @db.Char(15)
  note_mat_mauvaise Int
  passion           String
  carriere_futur    String
  objectif_vie      String
  hobby             String
  domaine_interesse String
  soutien           String
  infos_sup         String
}
